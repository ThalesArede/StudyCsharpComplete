using System;
using System.Globalization;

namespace ConsoleApp
{
    class Program
    {
        static void Main(string[] args)
        {

            string[] palavras = {"Thales", "Arêde", "Csharp", "Livros"};


            foreach (string palavra in palavras) { //--> Para cada palavra no array (string[]) palavras repita o bloco de código

                Console.WriteLine("Foreach rodando!");

            }

            Console.WriteLine("Fim da Linha");
            Console.ReadLine();

        }
    }
}
