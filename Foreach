using System;

namespace ConsoleApp
{
    class Program
    {
        static void Main(string[] args)
        {

            string[] palavras = {"Thales", "Arêde", "Csharp", "Livros"}; //--> Array


            foreach (string palavra in palavras) { //--> Para cada palavra no array (string[]) palavras repita o bloco de código

                Console.WriteLine(palavra); //--> Se deixarmos a variável palavra dentro do WriteLine, imprime todas as palavras do array

            }

            Console.WriteLine("Fim da Linha");
            Console.ReadLine();

        }
    }
}
